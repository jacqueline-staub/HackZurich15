<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/popup"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/titleRules"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="These are the rules\n 1. Keep your phone with you at all times \n 2. You have to achieve a kill at least once every @N@ days \n 3. The app transmits the phones position when open \n " />

    <Button
        android:id="@+id/dismissButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="dismiss"    
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</RelativeLayout>
